.comments_page {
  background-color: #f0f0f0;
}
.comments_page .thumb_item {
  margin: 20rpx 10rpx;
  padding: 10rpx;
  background-color: #fff;
}
.comments_page .thumb_item .thumb_top {
  display: flex;
}
.comments_page .thumb_item .thumb_top image {
  width: 100rpx;
  height: 100rpx;
  margin: 0 10rpx;
}
.comments_page .thumb_item .thumb_top .name_wrap {
  display: flex;
  flex-direction: column;
}
.comments_page .thumb_item .thumb_top .name_wrap .date {
  font-size: 25rpx;
  color: gray;
}
.comments_page .thumb_item .thumb_tip {
  margin: 20rpx;
  color: #414141;
  line-height: 50rpx;
}
.comments_page .thumb_item .thumb_tip text {
  color: #e3ac64;
}
.comments_page .thumb_item .thumb_bottom {
  padding: 20rpx;
  background-color: #f8f8f8;
}
.comments_page .thumb_item .thumb_bottom .thumb_comment {
  display: flex;
}
.comments_page .thumb_item .thumb_bottom .thumb_comment .name {
  color: #e3ac64;
}
.comments_page .thumb_item .thumb_bottom .thumb_comment .comments_content {
  color: gray;
  width: 400rpx;
  color: gray;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.comments_page .thumb_item .thumb_bottom .comments_essay {
  background-color: #fff;
  margin: 20rpx 0;
  padding: 10rpx 0;
  display: flex;
}
.comments_page .thumb_item .thumb_bottom .comments_essay image {
  width: 150rpx;
  height: 150rpx;
}
.comments_page .thumb_item .thumb_bottom .comments_essay .name_wrap {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: 10rpx;
}
.comments_page .thumb_item .thumb_bottom .comments_essay .name_wrap .content {
  font-size: 28rpx;
  width: 500rpx;
  margin-top: 20rpx;
  color: gray;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

