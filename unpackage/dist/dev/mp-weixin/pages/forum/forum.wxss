.fotum {
  display: flex;
  background-color: #f8f8f8;
}
.fotum .nav_bar_top {
  z-index: 10;
  width: 100%;
  height: 80rpx;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
}
.fotum .fotum_navbar {
  z-index: 10;
  position: fixed;
  top: 30px;
  top: 85rpx;
  right: 0;
  width: 100%;
}
.fotum .fotum_navbar .uni-navbar--border {
  border-bottom-style: none;
}
.fotum .fotum_navbar .city {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-left: 0rpx;
  margin-left: 0rpx;
  flex: 1;
}
.fotum .fotum_navbar .city .input-uni-icon {
  margin-left: 10rpx;
}
.fotum page {
  width: 100%;
  min-height: 100%;
  display: flex;
}
.fotum .swiper-box {
  margin: 0 15rpx;
  margin-top: 155rpx;
  margin-top: 185rpx;
  height: 100vh;
}
.fotum .scroll-v {
  flex: 1;
  flex-direction: column;
  width: 750rpx;
  width: 100%;
  height: 100vh;
}
.fotum .scroll-v .input-view {
  width: 90%;
  background-color: #ffffff;
  height: 35px;
  border-radius: 15px;
  padding: 0px 15px;
  margin: 7px auto;
  line-height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
  box-shadow: 0 0 5rpx 1rpx #eee;
}
.fotum .scroll-v .input-view .input-uni-icon {
  margin-left: 20rpx;
}
.fotum .scroll-v .input-view .nav-bar-input {
  width: 100%;
  background-color: #ffffff;
  font-size: 25rpx;
}
.fotum .scroll-v .recommend_content {
  width: 100%;
  color: gray;
  margin-top: 20rpx;
  background-color: #fff;
  padding: 25rpx 15rpx;
  font-size: 25rpx;
}
.fotum .scroll-v .recommend_content .content_title {
  color: #000;
  font-size: 30rpx;
  font-weight: 700;
}
.fotum .scroll-v .recommend_content .name {
  margin: 20rpx 5rpx;
  display: flex;
}
.fotum .scroll-v .recommend_content .name image {
  width: 60rpx;
  height: 60rpx;
}
.fotum .scroll-v .recommend_content .name text {
  margin-left: 15rpx;
  line-height: 55rpx;
}
.fotum .scroll-v .recommend_content .content {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-right: 25rpx;
}
.fotum .scroll-v .recommend_content .content_bottom {
  margin-top: 20rpx;
}
.fotum .scroll-v .recommend_content .content_bottom text {
  margin-right: 20rpx;
}
.fotum .scroll-v .idea_wrap {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding-left: 15rpx;
}
.fotum .scroll-v .idea_wrap .idea_item {
  width: 45%;
  margin: 15rpx 15rpx;
  border-radius: 15rpx;
  background-color: #fff;
  text-align: center;
}
.fotum .scroll-v .idea_wrap .idea_item image {
  width: 300rpx;
  margin: 10rpx auto;
  border-radius: 5rpx;
}
.fotum .scroll-v .idea_wrap .idea_item .name {
  color: gray;
  display: flex;
  justify-content: space-between;
  margin-bottom: 5rpx;
}
.fotum .scroll-v .idea_wrap .idea_item .name .left {
  display: flex;
  margin-left: 15rpx;
}
.fotum .scroll-v .idea_wrap .idea_item .name .left image {
  width: 55rpx;
  height: 55rpx;
}
.fotum .scroll-v .idea_wrap .idea_item .name .left text {
  margin-left: 10rpx;
  line-height: 65rpx;
}
.fotum .scroll-v .idea_wrap .idea_item .name .right {
  margin: 15rpx;
}
.fotum .scroll-v .idea_wrap .idea_item .name .right text {
  margin-left: 5rpx;
}
.fotum .scroll-v .hot_wrap .hot_item {
  margin: 10rpx;
  padding: 10rpx 20rpx;
  display: flex;
  background-color: #fff;
  border-radius: 15rpx;
}
.fotum .scroll-v .hot_wrap .hot_item .hot_no {
  margin-left: 15rpx;
  color: red;
  line-height: 140rpx;
  flex: 1;
}
.fotum .scroll-v .hot_wrap .hot_item .hot_content {
  margin: 10rpx;
  flex: 9;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.fotum .scroll-v .hot_wrap .hot_item .hot_content text:first-child {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.fotum .scroll-v .hot_wrap .hot_item .hot_content text:last-child {
  color: gray;
  font-size: 25rpx;
  margin-top: 10rpx;
}
.fotum .scroll-v .hot_wrap .hot_item image {
  margin-top: 30rpx;
  flex: 2;
  height: 100rpx;
}

