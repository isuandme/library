page {
  height: 100%;
}
.category {
  display: flex;
  height: 100%;
}
.category .nav_bar_top {
  z-index: 10;
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
}
.category .category_navbar {
  z-index: 10;
  position: fixed;
  top: 30px;
  top: 85rpx;
  right: 0;
  width: 100%;
}
.category .category_navbar .city {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-left: 20rpx;
  flex: 1;
}
.category .category_navbar .input-view {
  background-color: #f8f8f8;
  height: 30px;
  width: 500rpx;
  border-radius: 15px;
  padding: 0 15px;
  margin: 7px 0;
  line-height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}
.category .category_navbar .input-view .input-uni-icon {
  margin-right: 20rpx;
}
.category .category_navbar .input-view .nav-bar-input {
  width: 100%;
  background-color: #f8f8f8;
}
.category .category_navbar .input-view input {
  font-size: 25rpx;
}
.category .category_wrap {
  display: flex;
  width: 100%;
  margin-top: 140rpx;
  margin-top: 168rpx;
}
.category .category_wrap .left {
  flex: 1;
  text-align: center;
  border-right: 1px solid #eee;
  height: 100%;
}
.category .category_wrap .left view {
  margin: 20rpx 15rpx;
  padding: 15rpx 0;
  border-radius: 5rpx;
}
.category .category_wrap .left .active {
  background-color: #ffc072;
  color: #fff;
}
.category .category_wrap .right {
  flex: 3;
  margin: 0 15rpx;
}
.category .category_wrap .right .hot_item_wrap .hot_tag_wrap view {
  display: inline-block;
  font-size: 25rpx;
  color: #fff;
  padding: 2rpx 15rpx;
  border-radius: 15rpx;
  background: linear-gradient(130deg, #ffe353, #f7ffd7);
  margin-top: 20rpx;
}
.category .category_wrap .right .hot_item_wrap .hot_tag_wrap view text {
  color: #565656;
  font-size: 20rpx;
}

