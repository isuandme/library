.member {
  padding: 0 50rpx;
}
.member .top_wrap {
  margin: 20rpx 0rpx;
  border-radius: 15rpx;
  box-shadow: 0 0 10rpx 5rpx #eee;
}
.member .top_wrap .person_wrap {
  display: flex;
}
.member .top_wrap .person_wrap image {
  flex: 1.2;
  width: 100rpx;
  height: 105rpx;
  margin: 10rpx 15rpx;
}
.member .top_wrap .person_wrap .name_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
}
.member .top_wrap .person_wrap .name_wrap .name {
  font-size: 35rpx;
  color: #bf6b37;
}
.member .top_wrap .person_wrap .name_wrap .vip_level {
  margin-top: 5rpx;
  font-size: 20rpx;
  width: 120rpx;
  text-align: center;
  padding: 5rpx 10rpx;
  background-color: #ff924a;
  color: #fff;
}
.member .top_wrap .person_wrap .manage {
  font-size: 28rpx;
  margin-top: 20rpx;
  color: gray;
  flex: 2;
}
.member .top_wrap .date {
  display: inline-block;
  color: gray;
  margin: 0rpx 20rpx;
  font-size: 25rpx;
}
.member .top_wrap .renew {
  display: inline-block;
  text-align: center;
  display: inline-block;
  margin: 20rpx;
  margin-left: 170rpx;
  background-color: #ff924a;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
}
.member .middle_bar {
  display: flex;
  margin: 30rpx 0rpx;
}
.member .middle_bar .bar_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
  color: #676767;
}
.member .middle_bar .bar_item .content {
  margin-top: 15rpx;
  font-size: 28rpx;
}
.member swiper {
  margin: 10rpx 0rpx;
  height: 180rpx;
}
.member swiper image {
  width: 100%;
}
.member .member_power_wrap {
  margin: 40rpx 0;
  padding: 20rpx;
  box-shadow: 0 0 10rpx 5rpx #eee;
}
.member .member_power_wrap .iconfont {
  font-size: 60rpx;
  color: #ff924a;
}
.member .member_power_wrap .video_wrap {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.member .member_power_wrap .video_wrap .video_item {
  width: 180rpx;
  display: flex;
  flex-direction: column;
  margin: 10rpx;
}
.member .member_power_wrap .video_wrap .video_item image {
  width: 180rpx;
  height: 200rpx;
}
.member .member_power_wrap .video_wrap .video_item .name {
  text-align: center;
  font-size: 28rpx;
  margin-top: 10rpx;
}

