.search {
  display: flex;
}
.search .nav_bar_top {
  z-index: 10;
  width: 100%;
  height: 80rpx;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
}
.search .search_navbar {
  z-index: 10;
  position: fixed;
  top: 30px;
  top: 85rpx;
  right: 0;
  width: 100%;
}
.search .search_navbar .uni-navbar--border {
  border-bottom-style: none;
}
.search .search_navbar .city {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-left: 0rpx;
  margin-left: 0rpx;
  flex: 1;
}
.search .search_navbar .city .input-uni-icon {
  margin-left: 10rpx;
}
.search .search_navbar .input-view {
  background-color: #f8f8f8;
  height: 30px;
  width: 420rpx;
  border-radius: 15px;
  padding: 0px 15px;
  margin: 7px 0;
  line-height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}
.search .search_navbar .input-view .input-uni-icon {
  margin-right: 20rpx;
}
.search .search_navbar .input-view .nav-bar-input {
  width: 100%;
  background-color: #f8f8f8;
}
.search .search_navbar .input-view input {
  font-size: 25rpx;
}
.search .searchContent {
  margin-top: 170rpx;
  width: 100%;
  border-radius: 15rpx 15rpx;
  box-shadow: 0 0  10px 5px #ebebeb;
}
.search .searchContent .content_item {
  color: #878787;
  padding: 20rpx 0rpx;
  margin: 0 20px;
  margin-left: 10rpx;
  border-bottom: 1px solid #878787;
}
.search .searchContent .content_item text {
  margin-left: 20rpx;
}
.search .searchContent .content_item:last-child {
  border-bottom: none;
}
.search .guessContent {
  margin: 0 35rpx;
  margin-top: 155rpx;
  color: gray;
  width: 100%;
  margin-top: 175rpx;
}
.search .guessContent .guess_top {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.search .guessContent .guess_top view {
  margin: 5rpx 0;
}
.search .guessContent .guess_top .guessSearch {
  color: #000;
}
.search .guessContent .guessSearch_key {
  width: 100%;
  margin: 10rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.search .guessContent .guessSearch_key view {
  width: 48%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 15rpx 0;
  margin-right: 5rpx;
}
.search .guessContent .guessSearch_key view text {
  color: red;
  margin-left: 5rpx;
}
.search .guessContent .hot_no {
  margin-top: 20rpx;
  width: 100%;
}
.search .guessContent .hot_no .hot_title {
  background: linear-gradient(red, orange);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  font-weight: 700;
  font-size: 35rpx;
}
.search .guessContent .hot_no .hot_content {
  margin: 15rpx auto;
  padding: 15rpx;
  box-shadow: 0 0  5rpx 5rpx #ebebeb;
  border-radius: 20rpx;
}
.search .guessContent .hot_no .hot_content .hot_content_item {
  width: 580rpx;
  margin: 30rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.search .guessContent .hot_no .hot_content .hot_content_item text {
  margin: 0 10rpx;
  color: red;
  padding: 0 10rpx;
}

