.book_detail {
  background-color: #f5f5f5;
}
.book_detail swiper {
  width: 100%;
  height: 380rpx;
}
.book_detail swiper image {
  width: 100%;
}
.book_detail .book_top {
  background-color: #fff;
  padding-top: 25rpx;
  margin: 0 10rpx;
  position: relative;
  top: -40rpx;
  border-radius: 15rpx 15rpx 0 0;
  height: 200rpx;
}
.book_detail .book_top .book_name {
  display: flex;
  justify-content: space-between;
  font-weight: 600;
  margin: 0 20rpx;
}
.book_detail .book_top .book_name text:last-child {
  color: red;
}
.book_detail .book_top .book_condition {
  display: flex;
  margin-top: 50rpx;
}
.book_detail .book_top .book_condition .tag {
  flex: 1;
  display: flex;
  margin-left: 20rpx;
}
.book_detail .book_top .book_condition .tag .tag_item {
  margin: 0 8rpx;
}
.book_detail .book_top .book_condition .button {
  flex: 1;
  display: flex;
}
.book_detail .book_top .book_condition .button view {
  font-size: 25rpx;
  box-shadow: 0 0 10rpx 1rpx #aaaaaa;
  padding: 10rpx 25rpx;
  margin: 0 10rpx;
  border-radius: 15rpx;
}
.book_detail .book_detail_introduction {
  background-color: #fff;
  margin: 0 15rpx;
  border-radius: 15rpx;
  padding: 10rpx;
}
.book_detail .book_detail_introduction .title {
  font-weight: 700;
}
.book_detail .book_detail_introduction .info rich-text {
  height: 1000rpx;
}
.book_detail .evaluate {
  background-color: #fff;
  margin: 20rpx 15rpx;
  border-radius: 15rpx;
  padding: 10rpx;
}
.book_detail .evaluate .title {
  font-weight: 700;
  display: flex;
  justify-content: space-between;
}
.book_detail .evaluate .evaluate_wrap {
  margin-top: 20rpx;
}
.book_detail .evaluate .evaluate_wrap .evaluate_item .evaluate_top {
  display: flex;
}
.book_detail .evaluate .evaluate_wrap .evaluate_item .evaluate_top image {
  margin: 0 15rpx;
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
}
.book_detail .evaluate .evaluate_wrap .evaluate_item .evaluate_top .name_wrap {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.book_detail .evaluate .evaluate_wrap .evaluate_item .evaluate_top .name_wrap text:last-child {
  font-size: 25rpx;
  color: gray;
}
.book_detail .evaluate .evaluate_wrap .evaluate_item .content {
  font-size: 30rpx;
  margin: 20rpx;
}
.book_detail .recommend_wrap {
  background-color: #fff;
  margin: 20rpx 15rpx;
  border-radius: 15rpx;
  padding: 10rpx;
}
.book_detail .recommend_wrap .title {
  font-weight: 700;
}
.book_detail .recommend_wrap .recommend_book_wrap {
  margin: 20rpx 10rpx;
}
.book_detail .recommend_wrap .recommend_book_wrap .recommend_book_item {
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 180rpx;
  border-radius: 15rpx;
}
.book_detail .recommend_wrap .recommend_book_wrap .recommend_book_item image {
  width: 180rpx;
  height: 230rpx;
  border-radius: 15rpx;
}
.book_detail .recommend_wrap .recommend_book_wrap .recommend_book_item view {
  margin: 10rpx 0;
}
.book_detail .borrow_wrap .book_info_wrap {
  display: flex;
  padding: 20rpx;
}
.book_detail .borrow_wrap .book_info_wrap image {
  flex: 1;
  height: 230rpx;
}
.book_detail .borrow_wrap .book_info_wrap .info_wrap {
  flex: 3;
  margin-left: 50rpx;
}
.book_detail .borrow_wrap .book_info_wrap .info_wrap .name {
  font-weight: 700;
  margin-top: 40rpx;
  line-height: 50rpx;
}
.book_detail .borrow_wrap .book_info_wrap .info_wrap .price {
  color: gray;
  line-height: 80rpx;
  margin-left: 18rpx;
}
.book_detail .borrow_wrap .book_info_wrap .info_wrap .price text {
  margin-left: 10rpx;
  font-weight: 700;
  color: red;
}
.book_detail .borrow_wrap .book_info_wrap .info_wrap .tag {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx;
}
.book_detail .borrow_wrap .book_info_wrap .info_wrap .tag .tag_item {
  margin: 0 8rpx;
}
.book_detail .borrow_wrap .book_position_wrap {
  margin: 20rpx;
  box-shadow: 0 0 10rpx 5rpx #eee;
  padding: 20rpx;
}
.book_detail .borrow_wrap .book_position_wrap .title {
  margin: 10rpx 0;
  font-weight: 700;
}
.book_detail .borrow_wrap .book_position_wrap .title text {
  font-weight: normal;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.book_detail .borrow_wrap .book_position_wrap .example-body {
  margin: 20rpx 10rpx;
}
.book_detail .borrow_wrap .book_position_wrap .option_wrap {
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx 0;
}
.book_detail .borrow_wrap .book_position_wrap .option_wrap .option_item {
  font-size: 28rpx;
  margin: 10rpx;
  padding: 5rpx 25rpx;
  border: 1px solid #000000;
  border-radius: 15rpx;
}
.book_detail .borrow_wrap .book_position_wrap .option_wrap .active {
  color: coral;
  border-color: coral;
}
.book_detail .borrow_wrap .book_position_wrap .option_wrap .no {
  color: gray;
  border-color: #bebebe;
}
.book_detail .borrow_wrap .comfirm {
  padding: 20rpx 80rpx;
}
.book_detail .borrow_wrap .comfirm button::after {
  border: none;
}
.book_detail .borrow_wrap .comfirm button {
  background-color: #fff;
  color: gray;
  border: 1px solid gray;
}
.book_detail .borrow_wrap .comfirm .active {
  background-color: #fff;
  color: coral;
  border: 1px solid coral;
}

