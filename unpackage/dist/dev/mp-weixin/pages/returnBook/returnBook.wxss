.returnBook .return_wrap {
  margin: 40rpx 30rpx;
}
.returnBook .return_wrap .option_wrap {
  display: flex;
  margin-left: 5rpx;
}
.returnBook .return_wrap .option_wrap .option {
  margin-right: 1rpx;
  padding: 4rpx 25rpx;
  border: 1px solid #e7e7e7;
  border-radius: 0 15rpx 0rpx 0;
  border-bottom: none;
  transition: all .4s;
}
.returnBook .return_wrap .option_wrap .active {
  background-color: #8dc6da;
  color: #fff;
}
.returnBook .return_wrap .content_wrap {
  box-shadow: 0 0 10rpx 5rpx #eee;
}
.returnBook .return_wrap .content_wrap .content_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1px solid #eee;
}
.returnBook .return_wrap .content_wrap .content_item image {
  flex: 1;
  height: 210rpx;
  margin: 10rpx;
}
.returnBook .return_wrap .content_wrap .content_item .right {
  flex: 2.7;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-top: 10rpx;
  line-height: 48rpx;
}
.returnBook .return_wrap .content_wrap .content_item .right .book_name {
  font-weight: 600;
}
.returnBook .return_wrap .content_wrap .content_item .right .date {
  color: #e55a09;
  font-size: 25rpx;
}
.returnBook .return_wrap .content_wrap .content_item .right .position {
  color: gray;
  font-size: 25rpx;
}
.returnBook .return_wrap .content_wrap .content_item .right .option {
  font-size: 28rpx;
  margin-top: 10rpx;
}
.returnBook .return_wrap .content_wrap .content_item .right .option .option_wrap {
  display: inline-block;
  padding: 0rpx 15rpx;
  border-radius: 15rpx;
  border: 1px solid #d8d8da;
}
.returnBook .return_wrap .content_wrap .content_item .right .option .option_wrap:last-child {
  margin-left: 50rpx;
}
.returnBook .return_wrap .content_wrap .content_item:last-child {
  border-bottom: none;
}
.returnBook .borrow_wrap .book_info_wrap {
  display: flex;
  padding: 20rpx;
}
.returnBook .borrow_wrap .book_info_wrap image {
  flex: 1;
  height: 230rpx;
}
.returnBook .borrow_wrap .book_info_wrap .info_wrap {
  flex: 3;
  margin-left: 50rpx;
}
.returnBook .borrow_wrap .book_info_wrap .info_wrap .name {
  font-weight: 700;
  margin-top: 40rpx;
  line-height: 50rpx;
}
.returnBook .borrow_wrap .book_info_wrap .info_wrap .price {
  color: gray;
  line-height: 80rpx;
  margin-left: 18rpx;
}
.returnBook .borrow_wrap .book_info_wrap .info_wrap .price text {
  margin-left: 10rpx;
  font-weight: 700;
  color: red;
}
.returnBook .borrow_wrap .book_info_wrap .info_wrap .tag {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx;
}
.returnBook .borrow_wrap .book_info_wrap .info_wrap .tag .tag_item {
  margin: 0 8rpx;
}
.returnBook .borrow_wrap .book_position_wrap {
  margin: 20rpx;
  box-shadow: 0 0 10rpx 5rpx #eee;
  padding: 20rpx;
}
.returnBook .borrow_wrap .book_position_wrap .title {
  margin: 10rpx 0;
  font-weight: 700;
}
.returnBook .borrow_wrap .book_position_wrap .title text {
  font-weight: normal;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.returnBook .borrow_wrap .book_position_wrap .example-body {
  margin: 20rpx 10rpx;
}
.returnBook .borrow_wrap .book_position_wrap .option_wrap {
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx 0;
}
.returnBook .borrow_wrap .book_position_wrap .option_wrap .option_item {
  font-size: 28rpx;
  margin: 10rpx;
  padding: 5rpx 25rpx;
  border: 1px solid #000000;
  border-radius: 15rpx;
}
.returnBook .borrow_wrap .book_position_wrap .option_wrap .active {
  color: coral;
  border-color: coral;
}
.returnBook .borrow_wrap .book_position_wrap .option_wrap .no {
  color: gray;
  border-color: #bebebe;
}
.returnBook .borrow_wrap .comfirm {
  padding: 20rpx 80rpx;
}
.returnBook .borrow_wrap .comfirm button::after {
  border: none;
}
.returnBook .borrow_wrap .comfirm button {
  background-color: #fff;
  color: gray;
  border: 1px solid gray;
}
.returnBook .borrow_wrap .comfirm .active {
  background-color: #fff;
  color: coral;
  border: 1px solid coral;
}

