.personal {
  background-color: #fafafa;
}
.personal .nav_bar_top {
  z-index: 10;
  width: 100%;
  height: 80rpx;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
}
.personal .personal_navbar {
  z-index: 10;
  position: fixed;
  top: 30px;
  top: 85rpx;
  right: 0;
  width: 100%;
}
.personal .personal_navbar .uni-navbar--border {
  border-bottom-style: none;
}
.personal .personal_navbar .city {
  position: relative;
}
.personal .personal_navbar .city .point {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: red;
}
.personal .headImage {
  background-color: #fff;
  margin: 0 5rpx;
  margin-top: 165rpx;
  display: flex;
  width: 100%;
}
.personal .headImage .image_wrap {
  margin-left: 20rpx;
  margin-left: 10rpx;
}
.personal .headImage .image_wrap image {
  width: 135rpx;
  height: 135rpx;
}
.personal .headImage .content {
  margin: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: end;
  width: 340rpx;
}
.personal .headImage .content text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.personal .headImage .content .name {
  font-size: 40rpx;
  font-weight: 700;
}
.personal .headImage .vip {
  color: #ff924a;
  line-height: 170rpx;
  font-weight: 700;
  margin-right: 20rpx;
}
.personal .info_bar {
  background-color: #fff;
  color: gray;
  display: flex;
  border-radius: 10rpx;
  padding: 10rpx 0;
  text-align: center;
  padding-top: 30rpx;
}
.personal .info_bar .info_bar_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin: 0 10rpx;
}
.personal .info_bar .info_bar_item text {
  align-items: center;
  margin-top: 5rpx;
  font-size: 25rpx;
}
.personal .info_bar .info_bar_item .iconfont {
  color: #ff924a;
  font-size: 55rpx;
}
.personal .info_bar .info_bar_item:last-child {
  border-right: none;
}
.personal .offen_scan {
  margin: 40rpx auto;
  width: 95%;
  border-radius: 10rpx;
  padding: 10rpx;
  background-color: #fff;
}
.personal .offen_scan .offen_scan_top {
  display: flex;
  justify-content: space-between;
  padding: 0 25rpx;
  margin-bottom: 25rpx;
  color: gray;
}
.personal .offen_scan .offen_scan_top .my_scan {
  color: #000;
}
.personal .offen_scan .scan_content {
  margin-top: 10rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}
.personal .offen_scan .scan_content .scan_content_item {
  display: inline-block;
  width: 180rpx;
  height: 230rpx;
  text-align: center;
  margin: 0 5rpx;
}
.personal .offen_scan .scan_content .scan_content_item image {
  position: -webkit-sticky;
  position: sticky;
  width: 150rpx;
  height: 170rpx;
}
.personal .offen_scan .scan_content .scan_content_item text {
  font-size: 25rpx;
  display: block;
  margin: 2rpx 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.personal .more_wrap {
  margin-bottom: 340rpx;
}
.personal .more_wrap .more_top {
  font-weight: 700;
  margin-left: 25rpx;
}
.personal .more_wrap .more_content {
  background-color: #fff;
  width: 92%;
  margin: 15rpx auto;
  padding: 5rpx 15rpx;
  box-shadow: 0 0 5rpx 2rpx #ebebeb;
}
.personal .more_wrap .more_content .more_content_item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1px solid #ebebeb;
}
.personal .more_wrap .more_content .more_content_item .u_icon {
  margin: 0 15rpx;
}
.personal .more_wrap .more_content .more_content_item:last-child {
  border-bottom: none;
}

