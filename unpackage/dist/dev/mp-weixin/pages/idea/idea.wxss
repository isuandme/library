.idea .nav_bar_top {
  z-index: 10;
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
}
.idea .idea_navbar {
  z-index: 10;
  position: fixed;
  top: 30px;
  top: 85rpx;
  right: 0;
  width: 100%;
}
.idea .idea_navbar .uni-navbar--border {
  border-bottom-style: none;
}
.idea .idea_navbar .city {
  margin-left: 20rpx;
  margin-left: 0rpx;
  flex: 1;
}
.idea .idea_navbar .city .input-uni-icon {
  margin-left: 20rpx;
}
.idea .idea_navbar .add {
  font-size: 30rpx;
  color: coral;
}
.idea .idea_navbar .blogger_view {
  flex: 1;
  display: flex;
  height: 30px;
  margin-left: 20rpx;
  width: 420rpx;
}
.idea .idea_navbar .blogger_view image {
  width: 80rpx;
  height: 80rpx;
}
.idea .idea_navbar .blogger_view .name {
  font-weight: 600;
  margin-left: 20rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}
.idea swiper {
  margin-top: 180rpx;
  text-align: center;
  width: 100%;
  height: 500rpx;
}
.idea swiper image {
  width: 97%;
  height: 90%;
}
.idea .idea_content {
  margin: 20rpx;
  color: #343434;
  font-size: 35rpx;
}
.idea .issue_time {
  margin: 30rpx 20rpx;
  font-size: 25rpx;
  color: gray;
}
.idea .idea_bottom {
  text-align: center;
  color: gray;
  margin: 40rpx auto;
  padding-bottom: 50rpx;
}
.idea .bottom_bar {
  width: 100%;
  margin: 20rpx 0;
  position: -webkit-sticky;
  position: sticky;
  bottom: 0;
  margin-bottom: 50rpx;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}
.idea .bottom_bar input {
  width: 350rpx;
  padding: 10rpx 20rpx;
  margin-top: 15rpx;
  font-size: 25rpx;
  background-color: #f3f3f3;
  border-radius: 20rpx;
}
.idea .bottom_bar .icon_wrap {
  width: 200rpx;
  display: flex;
  margin-right: 20rpx;
}
.idea .bottom_bar .icon_wrap .icon_item {
  flex-direction: column;
  text-align: center;
}
.idea .bottom_bar .icon_wrap .icon_item .icon {
  margin: 0 20rpx;
}
.idea .bottom_bar .icon_wrap .icon_item .amount {
  font-size: 20rpx;
}

