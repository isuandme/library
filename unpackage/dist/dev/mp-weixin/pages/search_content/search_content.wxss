.search_content {
  display: flex;
}
.search_content .nav_bar_top {
  z-index: 10;
  width: 100%;
  height: 80rpx;
  height: 100rpx;
  background-color: #ff9238;
  position: fixed;
  top: 0;
}
.search_content .search_navbar {
  z-index: 10;
  position: fixed;
  top: 30px;
  top: 85rpx;
  right: 0;
  width: 100%;
}
.search_content .search_navbar .uni-navbar--border {
  border-bottom-style: none;
}
.search_content .search_navbar .city {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-left: 0rpx;
  margin-left: 0rpx;
  flex: 1;
}
.search_content .search_navbar .city .input-uni-icon {
  margin-left: 20rpx;
}
.search_content .search_navbar .input-view {
  background-color: #f8f8f8;
  height: 30px;
  width: 420rpx;
  border-radius: 15px;
  padding: 0px 15px;
  margin: 7px 0;
  line-height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}
.search_content .search_navbar .input-view .input-uni-icon {
  margin-right: 20rpx;
}
.search_content .search_navbar .input-view .nav-bar-input {
  width: 100%;
  background-color: #f8f8f8;
}
.search_content .search_navbar .input-view input {
  font-size: 25rpx;
}
.search_content .select_wrap {
  z-index: 11;
  position: fixed;
  top: 140rpx;
  left: 0;
  top: 173rpx;
  display: flex;
  padding: 25rpx  15rpx;
  width: 100%;
  background-color: #ffffff;
  border-bottom: 1px solid #ececec;
}
.search_content .select_wrap .option_first {
  text-align: center;
  width: 50%;
}
.search_content .select_wrap .option_first .input-uni-icon {
  margin-left: 10rpx;
}
.search_content .select_wrap .active {
  color: #ff9238;
}
.search_content .select_wrap .active .input-uni-icon {
  color: #ff9238 !important;
}
.search_content .select_wrap .down {
  background-color: #ffffff;
  position: absolute;
  top: 94rpx;
  left: 0;
  width: 93.8%;
  padding: 0 10rpx;
  border-radius: 0 0 15rpx 15rpx;
  height: 0rpx;
  overflow: hidden;
  transition: all .5s;
  top: 90rpx;
  width: 100%;
}
.search_content .select_wrap .down .down_item {
  margin: 10rpx auto;
  padding: 10rpx 0;
  border-bottom: 1px solid #eee;
}
.search_content .select_wrap .down .active {
  color: #ff9238;
}
.search_content .select_wrap .down .down_item:last-child {
  border-bottom: none;
}
.search_content .search_result {
  margin: 150rpx auto;
  padding: 0 15rpx;
  width: 100%;
  border-radius: 20rpx;
}
.search_content .search_result .result_wrap {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-top: 100rpx;
  margin-top: 140rpx;
}
.search_content .search_result .result_wrap .result_item {
  box-sizing: border-box;
  box-shadow: 0 0 10rpx 5rpx #f5f5f5;
  margin: 15rpx;
  width: 45%;
  border-radius: 15rpx;
}
.search_content .search_result .result_wrap .result_item image {
  width: 80%;
  height: 300rpx;
  margin: 0rpx 30rpx;
}
.search_content .search_result .result_wrap .result_item .name {
  margin: 5rpx 0;
  margin-left: 35rpx;
  font-weight: 700;
}
.search_content .search_result .result_wrap .result_item .name .iconfont {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #ff9238;
}
.search_content .search_result .result_wrap .result_item .price {
  font-size: 30rpx;
  margin: 10rpx 0;
  margin-left: 30rpx;
}
.search_content .search_result .result_wrap .result_item .price text {
  color: #ff9238;
}
.search_content .search_result .result_wrap .result_item .price .lendCount {
  margin-left: 50rpx;
  display: inline-block;
  font-size: 25rpx;
  color: gray;
}

