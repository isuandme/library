.home {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.home .nav_bar_top {
  z-index: 10;
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
}
.home .home_navbar {
  z-index: 10;
  position: fixed;
  top: 30px;
  top: 85rpx;
  right: 0;
  width: 100%;
}
.home .home_navbar .uni-navbar--border {
  border-bottom-style: none;
}
.home .home_navbar .city {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-left: 20rpx;
  margin-left: 0rpx;
  flex: 1;
}
.home .home_navbar .city .input-uni-icon {
  margin-left: 20rpx;
}
.home .home_navbar .input-view {
  background-color: #f8f8f8;
  height: 30px;
  width: 420rpx;
  border-radius: 15px;
  padding: 0px 15px;
  margin: 7px 0;
  line-height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}
.home .home_navbar .input-view .input-uni-icon {
  margin-right: 20rpx;
}
.home .home_navbar .input-view .nav-bar-input {
  width: 100%;
  background-color: #f8f8f8;
}
.home .home_navbar .input-view input {
  font-size: 25rpx;
}
.home swiper {
  margin-top: 150rpx;
  margin-top: 178rpx;
  width: 90%;
  height: 350rpx;
  border-radius: 5px;
  overflow: hidden;
  box-shadow: 0 0  10px 5px #ebebeb;
}
.home swiper swiper-item image {
  width: 100%;
}
.home .select_position_wrap {
  margin-top: 20rpx;
  width: 90%;
  display: flex;
  font-size: 25rpx;
}
.home .select_position_wrap .position_option {
  margin-right: 1rpx;
  padding: 4rpx 8rpx;
  border: 1px solid #313131;
  border-radius: 0 15rpx 0rpx 0;
  border-bottom: none;
  transition: all .4s;
}
.home .select_position_wrap .active {
  background-color: #FF6B00;
  color: #fff;
}
.home .select_position_wrap .check_more {
  padding: 4rpx 8rpx;
  background-color: #000;
  color: #fff;
  border-radius: 5px;
}
.home .detail_scan_warp {
  width: 90%;
  padding: 25rpx 10rpx;
  text-align: center;
  box-shadow: 0px 5px  10px 5px #ebebeb;
}
.home .detail_scan_warp .count_wrap {
  font-size: 25rpx;
  width: 50%;
  float: left;
}
.home .detail_scan_warp progress {
  width: 50%;
  overflow: hidden;
  border: 1px solid #000;
  margin: 40rpx auto;
  margin-top: 120rpx;
}
.home .detail_scan_warp progress .uni-progress-bar {
  background-color: #fff !important;
}
.home .detail_scan_bottom {
  width: 87%;
  height: 20rpx;
  background-color: #FE9041;
  overflow: hidden;
  border-radius: 0 0 15px 15px;
}
.home .mid_bar {
  margin-top: 25rpx;
  display: flex;
}
.home .mid_bar .borrow_book_wrap {
  flex: 1;
  margin: 10rpx;
  width: 280rpx;
  height: 170rpx;
  width: 300rpx;
  height: 200rpx;
  border-radius: 10rpx;
  border: 2px solid #9FF6CD;
  padding: 20rpx;
}
.home .mid_bar .borrow_book_wrap text {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 170rpx;
  line-height: 150rpx;
  color: #38761D;
}
.home .mid_bar .borrow_book_wrap view {
  float: right;
  line-height: 170rpx;
  line-height: 150rpx;
  color: #38761D;
  font-size: 40px;
}
.home .mid_bar .borrow_book_wrap:nth-child(2) {
  border: 2px solid #A3E3FC;
}
.home .mid_bar .borrow_book_wrap:nth-child(2) text {
  color: #45818E;
}
.home .mid_bar .borrow_book_wrap:nth-child(2) view {
  color: #45818E;
}
.home .hot_title_wrap {
  margin-top: 20rpx;
  width: 90%;
}
.home .hot_title_wrap .hot_title {
  width: 125rpx;
  width: 170rpx;
  border-radius: 10rpx 0 10rpx 0;
  padding: 5rpx 20rpx;
  border-bottom: none;
  background-color: #FF6B00;
  color: #fff;
}
.home .hot_wrap {
  width: 90%;
  box-shadow: 0 10px  10px 5px #ebebeb;
  margin-bottom: 150rpx;
}
.home .hot_wrap .img {
  height: 235rpx !important;
}
.home .hot_wrap .hot_tag_wrap view {
  display: inline-block;
  font-size: 25rpx;
  color: #fff;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
  background: linear-gradient(130deg, red, orange);
  margin-top: 20rpx;
}
.home .hot_wrap .hot_tag_wrap view text {
  color: #565656;
  font-size: 20rpx;
  margin-left: 10rpx;
}
.home .hot_wrap .hot_item_wrap:nth-child(2) .hot_tag_wrap view {
  background: linear-gradient(130deg, orange, #ff7e15);
}
.home .hot_wrap .hot_item_wrap:nth-child(3) .hot_tag_wrap view {
  background: linear-gradient(130deg, orange, yellow);
}
.home .hot_wrap .hot_item_wrap:last-child .hot_item {
  border-bottom: none;
}

