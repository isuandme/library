.personal_home {
  background-color: #eee;
}
.personal_home .nav_bar_top {
  z-index: 10;
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
}
.personal_home .home_navbar {
  z-index: 10;
  position: fixed;
  top: 30px;
  top: 85rpx;
  right: 0;
  width: 100%;
}
.personal_home .home_navbar .uni-navbar--border {
  border-bottom-style: none;
}
.personal_home .home_navbar .city {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-left: 20rpx;
  margin-left: 0rpx;
  flex: 1;
}
.personal_home .home_navbar .city .input-uni-icon {
  margin-left: 20rpx;
}
.personal_home .home_navbar .input-view {
  background-color: #f8f8f8;
  height: 30px;
  width: 420rpx;
  border-radius: 15px;
  padding: 0px 15px;
  margin: 7px 0;
  line-height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}
.personal_home .home_navbar .input-view .input-uni-icon {
  margin-right: 20rpx;
}
.personal_home .home_navbar .input-view .nav-bar-input {
  width: 100%;
  background-color: #f8f8f8;
}
.personal_home .home_navbar .input-view input {
  font-size: 25rpx;
}
.personal_home .personal_wrap {
  margin-top: 170rpx;
  padding: 15rpx 20rpx;
  background-color: #fff;
}
.personal_home .personal_wrap .personal_info {
  display: flex;
}
.personal_home .personal_wrap .personal_info image {
  flex: 1;
  height: 190rpx;
}
.personal_home .personal_wrap .personal_info .right {
  flex: 2.3;
  display: flex;
  flex-direction: column;
  margin-left: 80rpx;
}
.personal_home .personal_wrap .personal_info .right .button_wrap {
  display: flex;
  margin: 20rpx 50rpx;
}
.personal_home .personal_wrap .personal_info .right .button_wrap .button_item {
  flex: 1;
  margin: 0 10rpx;
  padding: 5rpx 0;
  text-align: center;
  background-color: #fff;
  color: #535353;
  border: 1px solid #535353;
}
.personal_home .personal_wrap .personal_detail {
  margin-left: 70rpx;
}
.personal_home .personal_wrap .personal_detail .university {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #535353;
}
.personal_home .content_wrap {
  margin: 10rpx 0;
  margin-bottom: 100rpx;
}
.personal_home .content_wrap .select_wrap {
  display: flex;
  justify-content: center;
  background-color: #fff;
}
.personal_home .content_wrap .select_wrap .option {
  text-align: center;
  flex: 1;
  margin: 10rpx 30rpx;
}
.personal_home .content_wrap .select_wrap .active {
  color: coral;
}
.personal_home .content_wrap .content {
  margin-top: 10rpx;
  background-color: #fff;
  border-radius: 15rpx;
}
.personal_home .post_wrap {
  margin: 20rpx 0;
}
.personal_home .post_wrap .post_item {
  background-color: #fff;
  border-bottom: 1px solid #d6d6d6;
}
.personal_home .post_wrap .post_item .post_main {
  display: flex;
}
.personal_home .post_wrap .post_item .post_main image {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
}
.personal_home .post_wrap .post_item .post_main .right {
  display: flex;
  flex-direction: column;
}
.personal_home .post_wrap .post_item .post_main .right .name {
  font-weight: 600;
  font-size: 38rpx;
  margin-top: 20rpx;
}
.personal_home .post_wrap .post_item .post_main .right .content {
  width: 580rpx;
  color: #6d6d6d;
}
.personal_home .post_wrap .post_item .post_main .right .image_wrap {
  width: 580rpx;
  margin: 20rpx 0;
}
.personal_home .post_wrap .post_item .post_main .right .image_wrap .u-album__row .u-album__row__wrapper {
  margin-right: 0rpx !important;
}
.personal_home .post_wrap .post_item .post_bottom {
  display: flex;
  justify-content: space-between;
  padding-left: 140rpx;
  padding-right: 100rpx;
  margin-bottom: 20rpx;
  color: #666;
}
.personal_home .post_wrap .post_item .post_bottom .date {
  font-size: 25rpx;
}
.personal_home .post_wrap .post_item .post_bottom .other .icon {
  margin: 0 15rpx;
}

