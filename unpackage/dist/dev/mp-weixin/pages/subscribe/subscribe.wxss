.subscribe .topbar {
  font-size: 28rpx;
  color: gray;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 15rpx;
}
.subscribe .topbar .left {
  color: #000;
}
.subscribe .topbar .left text {
  font-size: 40rpx;
  color: #0099ff;
  margin-right: 5rpx;
}
.subscribe .topbar .right text {
  margin-right: 10rpx;
}
.subscribe .swiper_wrap {
  margin-top: 20rpx;
}
.subscribe .introduce_wrap {
  position: relative;
  margin: 25rpx auto;
  width: 80%;
  padding: 25rpx;
  text-align: center;
  box-shadow: 0 0 10rpx 5rpx #eee;
  border-radius: 15rpx;
}
.subscribe .introduce_wrap view {
  margin: 15rpx 0;
}
.subscribe .introduce_wrap .iconfont {
  color: red;
  font-size: 60rpx;
  position: absolute;
  top: -30rpx;
}
.subscribe .introduce_wrap .tag {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.subscribe .introduce_wrap .tag .tag_item {
  margin: 0 8rpx;
}
.subscribe .select_seat_wrap {
  width: 90%;
  margin: 10rpx auto;
  font-size: 28rpx;
}
.subscribe .select_seat_wrap .date_wrap {
  display: flex;
  margin-left: 5rpx;
}
.subscribe .select_seat_wrap .date_wrap .date_option {
  margin-right: 1rpx;
  padding: 4rpx 25rpx;
  border: 1px solid #313131;
  border-radius: 0 15rpx 0rpx 0;
  border-bottom: none;
  transition: all .4s;
}
.subscribe .select_seat_wrap .date_wrap .active {
  background-color: #068b06;
  color: #fff;
}
.subscribe .select_seat_wrap .time_wrap {
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx 20rpx;
  font-weight: 700;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 0 5rpx 1rpx #eee;
}
.subscribe .select_seat_wrap .time_wrap .right_wrap .input-uni-icon {
  margin-left: 10rpx;
}
.subscribe .select_seat_wrap .seat_info {
  margin-top: 0rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #ffffff;
  border: 1rpx solid #eee;
  padding: 20rpx 10rpx;
  text-align: center;
}
.subscribe .select_seat_wrap .seat_info .seat_item .iconfont {
  color: coral;
  font-size: 60rpx;
}
.subscribe .select_seat_wrap .seat_info .seat_item .icon-yixuanzuowei4 {
  color: #6b6b6b;
}
.subscribe .select_seat_wrap .seat_info .seat_item .icon-yixuanzuowei6 {
  color: #068b06;
}
.subscribe .select_seat_wrap .seat_info .seat_option_info {
  margin-top: 20rpx;
  display: flex;
}
.subscribe .select_seat_wrap .seat_info .info_item {
  flex: 1;
  margin: 0 20rpx;
}
.subscribe .select_seat_wrap .seat_info .info_item .iconfont {
  font-size: 60rpx;
  margin: 0 10rpx;
  color: coral;
}
.subscribe .select_seat_wrap .seat_info .info_item .no {
  color: #6b6b6b;
}
.subscribe .subBitton {
  width: 80%;
  font-weight: 700;
  margin-top: 35rpx;
  margin-bottom: 150rpx;
  color: #068b06;
  background-color: #fff;
}

