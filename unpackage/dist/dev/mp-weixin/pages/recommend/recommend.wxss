.recommend {
  width: 100%;
  margin: 20rpx 10rpx;
}
.recommend .topTitle {
  font-size: 38rpx;
  font-weight: 700;
}
.recommend .askman {
  margin: 15rpx 0;
  display: flex;
}
.recommend .askman image {
  width: 80rpx;
  height: 80rpx;
  margin: 0 10rpx;
}
.recommend .askman .name_wrap {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  width: 500rpx;
}
.recommend .askman .name_wrap .name {
  font-weight: 700;
}
.recommend .askman .name_wrap .about {
  color: gray;
  font-size: 25rpx;
}
.recommend .askman .follow {
  padding: 18rpx 20rpx;
  border-radius: 15rpx;
  background-color: #eee;
}
.recommend .content {
  margin: 15rpx;
  line-height: 55rpx;
}
.recommend .bottom_bar {
  width: 100%;
  margin: 20rpx 0;
  position: -webkit-sticky;
  position: sticky;
  bottom: 0;
  margin-bottom: 50rpx;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}
.recommend .bottom_bar input {
  width: 350rpx;
  padding: 10rpx 20rpx;
  margin-top: 15rpx;
  font-size: 25rpx;
  background-color: #f3f3f3;
  border-radius: 20rpx;
}
.recommend .bottom_bar .icon_wrap {
  width: 300rpx;
  display: flex;
}
.recommend .bottom_bar .icon_wrap .icon_item {
  flex-direction: column;
  text-align: center;
}
.recommend .bottom_bar .icon_wrap .icon_item .icon {
  margin: 0 20rpx;
}
.recommend .bottom_bar .icon_wrap .icon_item .amount {
  font-size: 20rpx;
}

