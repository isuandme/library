.news input {
  margin: 20rpx;
  padding: 10rpx 20rpx;
  background-color: #eee;
  border-radius: 25rpx;
  font-size: 25rpx;
}
.news .about .about_me {
  margin: 10rpx 20rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}
.news .about .about_me .img {
  display: inline-block;
  background-color: #e7754c;
  padding: 20rpx;
  border-radius: 50%;
}
.news .about .about_me .img .iconfont {
  color: #fff;
  font-size: 50rpx;
}
.news .about .about_me .text {
  vertical-align: middle;
  display: inline-block;
  margin: 0 30rpx;
}
.news .about .about_me .icon {
  float: right;
  margin: 30rpx 10rpx;
}
.news .about .about_me:nth-child(2) .img {
  background-color: #1cab1c;
}
.news .about .about_me:nth-child(3) .img {
  background-color: #4c9fc5;
}
.news .news_wrap {
  margin: 0 20rpx;
}
.news .news_wrap .news_item {
  margin: 10rpx 0;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  display: flex;
}
.news .news_wrap .news_item image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.news .news_wrap .news_item .name_news {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}
.news .news_wrap .news_item .name_news .name {
  margin-bottom: 10rpx;
}
.news .news_wrap .news_item .name_news .content {
  width: 550rpx;
  color: gray;
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

