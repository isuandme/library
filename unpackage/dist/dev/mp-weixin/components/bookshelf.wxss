.bookshelf {
  padding: 5rpx 30rpx;
}
.bookshelf .book_top_wrap {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
}
.bookshelf .book_top_wrap .right {
  display: flex;
  position: relative;
}
.bookshelf .book_top_wrap .right .down {
  margin-right: 30rpx;
}
.bookshelf .book_top_wrap .right .down .input-uni-icon {
  margin-left: 5rpx;
}
.bookshelf .book_top_wrap .right .down_content {
  z-index: 12;
  position: absolute;
  top: 60rpx;
  left: 0;
  width: 100%;
  background-color: #fff;
  height: 0;
  overflow: hidden;
  transition: all .3s;
  box-shadow: 0 0 5rpx 1rpx #eee;
}
.bookshelf .book_top_wrap .right .down_content .content_item {
  margin: 20rpx;
}
.bookshelf .book_top_wrap .right .down_content .active {
  color: coral;
}
.bookshelf .myBookshelf {
  margin: 20rpx 0;
}
.bookshelf .myBookshelf .bookshelf_item {
  border-bottom: 1px solid #d6d6d6;
  padding-bottom: 30rpx;
  margin: 20rpx 0;
}
.bookshelf .myBookshelf .bookshelf_item .bookshelf_name_wrap {
  display: flex;
}
.bookshelf .myBookshelf .bookshelf_item .bookshelf_name_wrap .name {
  margin-left: 10rpx;
  font-size: 40rpx;
  font-weight: 600;
}
.bookshelf .myBookshelf .bookshelf_item .bookshelf_name_wrap .status {
  margin-left: 25rpx;
  margin-top: 10rpx;
  font-size: 25rpx;
  padding: 0 5rpx;
  color: #ff8725;
  border: 1px solid #ff8725;
}
.bookshelf .myBookshelf .bookshelf_item .bookshelf_content_wrap {
  margin-top: 30rpx;
  display: flex;
  font-size: 28rpx;
}
.bookshelf .myBookshelf .bookshelf_item .bookshelf_content_wrap .bookshelf_content_amount {
  flex: 1;
  margin: 0 30rpx;
}
.bookshelf .myBookshelf .bookshelf_item .bookshelf_content_wrap .status {
  flex: 1;
}
.bookshelf .myBookshelf .bookshelf_item .bookshelf_content_wrap .icon {
  flex: 2;
  text-align: right;
  margin-top: -20rpx;
  margin-right: 10rpx;
}
.bookshelf .myBookshelf .content_down {
  transition: all .5s;
  overflow: auto;
  margin: 0 15rpx;
}
.bookshelf .myBookshelf .content_down .hot_tag_wrap view {
  display: inline-block;
  font-size: 25rpx;
  color: #fff;
  padding: 2rpx 15rpx;
  border-radius: 15rpx;
  background: linear-gradient(130deg, #ffe353, #f7ffd7);
  margin-top: 20rpx;
}
.bookshelf .myBookshelf .content_down .hot_tag_wrap view text {
  color: #565656;
  font-size: 20rpx;
}
.bookshelf .myBookshelf .content_down .img {
  height: 235rpx !important;
}

